.pay_container {
  padding: 12px;
  padding-bottom: 40px;
  box-sizing: border-box;
}

.pay_address {}

.pay_product_info {
  display: flex;
  flex-direction: column;
  background-color: #ffffff;
  padding: 24px 12px;
  border-radius: 8px;
}

.pay_product_info_total {
  font-size: 18px;
  font-weight: 700;
  margin-bottom: 24px;
}

.pay_product_info_list {
  padding-bottom: 16px;
  border-bottom: 1px solid #eee;
  margin-bottom: 16px;
}


.pay_product_info_list_item {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16px;
}

.pay_product_info_item_content {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  flex: 1;
  padding-right: 8px;
}

.pay_product_info_item {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.pay_product_item_image {
  width: 36px;
  height: 36px;
}

.pay_product_item_image image {
  width: 100%;
  height: 100%;
}

.pay_product_item_name {
  font-size: 16px;
  margin-left: 4px;
}

.pay_product_item_count {
  font-size: 16px;
}

.pay_product_item_price {
  font-size: 16px;
  font-weight: 700;
}

.pay_product_item_totalprice {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
}

.pay_product_item_totalprice text {
  font-weight: 500;
  margin-left: 4px;
}

.pay_product_notes {
  margin-top: 24px;
  background: #f6f6f6;
  padding: 16px 12px;
  border-radius: 4px;
}

.pay_product_payment {
  box-sizing: border-box;
  padding-bottom:calc(15rpx + constant(safe-area-inset-bottom));
  padding-bottom:calc(15rpx + env(safe-area-inset-bottom));
  padding-top: 12px;
  padding-left: 12px;
  padding-right: 12px;
  width: 100%;
  background-color: #ffffff;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.pay_product_payment_total {
  font-size: 16px;
}

.pay_product_payment_total text {
  font-weight: 700;
  font-size: 22px;
}

.pay_product_payment_action {
  width: 100px;
}
