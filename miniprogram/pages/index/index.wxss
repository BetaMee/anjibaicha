/**index.wxss**/

page {
  padding-top: 54rpx;
  background-color: #f6f6f6;
  padding-bottom: 60rpx;
}

.home_container {
  width: 100%;
}

.shop_zone {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 12px 24px;
  height: 20vh;
}

.shop_image {
  width: 48px;
  height: 48px;
  margin-right: 22px;
}

.shop_info {
  display: flex;
  flex-direction: column;
}

.shop_container {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 80%;
}

.shop_pay_qrcode {

}

.shop_name {
  font-size: 18px;
  margin-bottom: 4px;
}

.shop_des {
  font-size: 12px;
}

.shop_show_more {
  margin-left: 24px;
}

/* 商品选项 */
.side-bar-wrapper {
  display: flex;
  flex: 1;
}

.side-bar-wrapper .content {
  flex: 1;
}

.side-bar-wrapper .section {
  padding: 32rpx 0;
}

.side-bar-wrapper .title {
  padding-left: 40rpx;
  margin-bottom: 8rpx;
  line-height: 52rpx;
}

.side-bar-wrapper .image {
  width: 96rpx;
  height: 96rpx;
}
