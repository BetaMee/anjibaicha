.add_cart_popup {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 24px 12px 36px 12px;
}
.add_cart_popup_price {
  display: flex;
  flex-direction: row;
  align-items: center;
  color: #333;
}

.add_cart_popup_icon {
  width: 38px;
  height: 38px;
  background-color: #eee;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 4px;
}

.add_cart_popup_total_txt {
  font-size: 12px;
  margin-left: 12px;
}

.add_cart_popup_total_price {
  font-size: 16px;
  margin-left: 4px;
  font-weight: 500;
}

.add_cart_popup_confirm {
  width: 100px;
}